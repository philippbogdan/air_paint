<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- URL Scheme for Meta SDK OAuth callback -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>CFBundleURLName</key>
            <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>airpaintar</string>
            </array>
        </dict>
    </array>

    <!-- Required to launch Meta mobile app for OAuth -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>fb-viewapp</string>
    </array>

    <!-- Meta Wearables SDK Configuration -->
    <key>MWDAT</key>
    <dict>
        <key>AppLinkURLScheme</key>
        <string>airpaintar://</string>
        <key>ClientToken</key>
        <string>$(CLIENT_TOKEN)</string>
        <key>MetaAppID</key>
        <string>$(META_APP_ID)</string>
        <key>TeamID</key>
        <string>$(DEVELOPMENT_TEAM)</string>
    </dict>

    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
    </dict>
    <key>UILaunchScreen</key>
    <dict/>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arm64</string>
        <string>arkit</string>
    </array>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>NSCameraUsageDescription</key>
    <string>AirPaintAR needs camera access for AR visualization and as a fallback for glasses streaming.</string>
    <key>NSLocalNetworkUsageDescription</key>
    <string>AirPaintAR connects to a local Mac computer to receive 3D drawing data.</string>
    <key>NSBonjourServices</key>
    <array>
        <string>_airpaint._tcp</string>
    </array>
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>AirPaintAR uses Bluetooth to connect to Meta Glasses and a Bluetooth shutter button for drawing control.</string>
    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>AirPaintAR uses Bluetooth to connect to Meta Glasses.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>AirPaintAR may use the microphone for audio recording with glasses.</string>
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>

    <!-- Background modes for Bluetooth accessories -->
    <key>UIBackgroundModes</key>
    <array>
        <string>bluetooth-peripheral</string>
        <string>external-accessory</string>
    </array>

    <!-- Meta glasses accessory protocol -->
    <key>UISupportedExternalAccessoryProtocols</key>
    <array>
        <string>com.meta.ar.wearable</string>
    </array>
</dict>
</plist>
